extends ../layouts/default

block content
	.container: .row: .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
		article
			p: a(href='/projects') &larr; back to the projects
			hr
			if !data.project
				h2 Invalid Project.
			else
				header
					h1= data.project.title
					h5 Posted 
						if data.project.startDate
							| on #{data.project._.startDate.format('MMMM Do, YYYY')} 
						if data.project.categories && data.project.categories.length
							| in 
							each cat, cat_i in data.project.categories
								a(href='/projects/' + cat.key)= cat.name
								if cat_i < data.project.categories.length - 1
									| , 
								else
									|  
						if data.project.location
							| by #{data.project.location}
				.project
					if data.project.image.exists
						.image-wrap: img(src=data.project._.image.fit(750,450)).img-responsive
					!= data.project.content.full
