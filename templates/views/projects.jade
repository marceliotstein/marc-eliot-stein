extends ../layouts/default

mixin project(project)
	.project(data-ks-editable=editable(user, { list: 'Project', id: project.id }))
		h2: a(href='/projects/project/' + project.slug)= project.title
		p.lead.text-muted Posted 
			if project.startDate
				| on #{project._.startDate.format('MMMM Do, YYYY')} 
			if project.categories && project.categories.length
				| in 
				each cat, i in project.categories
					a(href='/projects/' + cat.key)= cat.name
					if i < project.categories.length - 1
						| , 
					else
						|  
			if project.location
				| by #{project.location}
		if project.image.exists
			img(src=project._.image.fit(160,160)).img.pull-right
		p!= project.content.brief
		if project.content.extended
			p.read-more: a(href='/projects/project/' + project.slug) Read more...

block intro
	.container
		h1= data.category ? data.category.name : 'Projects'

block content
	.container: .row
		.col-sm-8.col-md-9
			if filters.category && !data.category
				h3.text-muted Invalid Category.
			else
				if data.projectlist.results.length
					if data.projectlist.totalPages > 1
						h4.text-weight-normal Showing 
							strong #{data.projectlist.first}
							|  to 
							strong #{data.projectlist.last}
							|  of 
							strong #{data.projectlist.total}
							|  projects.
					else
						h4.text-weight-normal Showing #{utils.plural(data.projectlist.results.length, '* project')}.
					.projects
						each project in data.projectlist.results
							+project(project)
					
					if data.projectlist.totalPages > 1
						ul.pagination
							if data.projectlist.previous
								li: a(href='?page=' + data.projectlist.previous): span.glyphicon.glyphicon-chevron-left
							else
								li.disabled: a(href='?page=' + 1): span.glyphicon.glyphicon-chevron-left
							each p, i in data.projectlist.pages
								li(class=data.projectlist.currentPage == p ? 'active' : null)
									a(href='?page=' + (p == '...' ? (i ? data.projectlist.totalPages : 1) : p ))= p
							if data.projectlist.next
								li: a(href='?page=' + data.projectlist.next): span.glyphicon.glyphicon-chevron-right
							else
								li.disabled: a(href='?page=' + data.projectlist.totalPages): span.entypo.glyphicon.glyphicon-chevron-right
				else
					if data.category
						h3.text-muted There are no projects in the category #{data.category.name}.
					else
						h3.text-muted There are no projects yet.
		
		if data.categories.length
			.col-sm-4.col-md-3
				h2 Categories
				.list-group(style='margin-top: 70px;')
					a(href='/projects', class=!data.category ? 'active' : false).list-group-item All Categories
					each cat in data.categories
						a(href='/projects/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name
